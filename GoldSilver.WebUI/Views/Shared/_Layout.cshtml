                    <div class="col-xs-4 col-md-4 col-lg-4 description-to-show-icons">
                        <button type="submit" class="btn btn-secondary btn-lg">
                            <a href="/jewelry/${JewelryId}"><i class="glyphicon glyphicon-chevron-right black-icon"></i></a>
                        </button>
                    </div>
                </div>
            </div>

            <h4></h4>
        </div>

    </script>

