    <script>
        $(document).ready(function () {
            $('.glyphicon-hover').hover(function () {
                $(this).addClass('glyphicon-heart').removeClass('glyphicon-heart-empty');
            }, function () {
                $(this).removeClass('glyphicon-heart').addClass('glyphicon-heart-empty');
            });

            $('.product-description').hover(function () {
                $(this).find('.description-to-show').removeClass('hover-description');
            }, function () {
                $(this).find('.description-to-show').addClass('hover-description');
            });
        });

        $('.service1-item').click(function () {
            var newURL = '/Jewelries/GetImageById?imageId=' + $(this).attr("img-id");

            $("#item-display").attr("src", newURL);
        });

        var data = { "JewelryId": 1, "Name": "New Jew 1", "Description": "New description. . Popularity = 3", "Article": "111", "Weight": 1.00, "MaterialId": 1, "GemstoneId": 1, "Fineness": 555, "Popularity": 3, "CategoryId": 1, "ImageData": null, "ImageMimeType": null, "Set": "1", "PrevJewelry": 0, "NextJewelry": 0, "ImageId": null, "Images": null, "Category": { "CategoryId": 1, "CategoryName": "Rings", "Order": 1, "UrlPath": "ring" }, "Material": null, "Gemstone": { "GemstoneId": 1, "GemstoneName": "Diamond", "Order": 1, "UrlPath": "diamond" } };


        $(document).ready(function () {

            var id = $('#Set').val();

            jQuery.ajax({
                url: '/Jewelries/GetJewelryBySet?set=' + id,
                success: function (result) {
                    $('#jewTmpl').tmpl(result).appendTo('#jewelries-set');
                }
            });
        });
    </script>

