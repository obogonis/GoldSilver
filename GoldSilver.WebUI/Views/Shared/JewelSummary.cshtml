@model GoldSilver.Domain.Entities.Jewelry

<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 product-description">



        <div class="row">
            <div>
                @if (Model.Images.Count > 0)
                {
                    <a href="@Url.Action("Details", new { id = @Model.JewelryId })">
                        <img width="200" height="200" src="@Url.Action("GetImageForTeaser", "Jewelries", new { Model.JewelryId })" />
                    </a>
                }
                <div class="col-xs-2 col-md-2 col-lg-2 description-to-show-icons right-icon">
                    @using (Html.BeginForm("AddToFavorites", "Favorite"))
                    {
                        @Html.HiddenFor(x => x.JewelryId)
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)

                        <button type="submit" class="btn btn-secondary btn-lg">
                            <i class="glyphicon glyphicon-heart-empty glyphicon-hover rose-icon"></i>
                        </button>

                    }
                </div>
            </div>
        </div>
 
@*<h2>@Html.RouteLink(@Model.Name, "JeweleryDetails", new { id = @Model.JewelryId })</h2>*@
@*<p class="description">@Model.Description</p>*@
    <div class="row description-details">
        <div class="row catagory-name-color">
            <strong>@Model.Category.CategoryName</strong>
            <br />
            <br />
        </div>
        <div class="row hover-description description-to-show">
            <div class="col-xs-6 col-md-6 col-lg-6">
                Метал: <strong>@Model.Material.MaterialName</strong>
                <br /> 
                Вага: <strong>@Model.Weight</strong>
                <br />
                Артикул: <strong>@Model.Article</strong>
            </div>
            <div class="col-xs-4 col-md-4 col-lg-4 col-xs-offset-4 col-md-offset-3 col-lg-offset-2 description-to-show-icons">
                <button type="submit" class="btn btn-secondary btn-lg description-link">
                    <a href="@Url.Action("Details", new { id = @Model.JewelryId })"><i class="glyphicon glyphicon-chevron-right black-icon"></i></a>
                </button>
            </div>
        </div>
    </div>

